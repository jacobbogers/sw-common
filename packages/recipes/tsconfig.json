{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": false,
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"lib": [
			"es2020",
			"DOM"
		],
		"module": "es2020",
		"moduleResolution": "node",
		"paths": {
			"$lib": [
				"src/lib"
			],
			"$lib/*": [
				"src/lib/*"
			]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es2019"
	},
	"exclude": [
		".svelte-kit",
		"node_modules"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.svelte"
	]
}
